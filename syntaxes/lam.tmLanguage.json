{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "lam",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.alphanumeric.lam",
				"match": "\\b(let|in)\\b"
			},{
        "name": "keyword.symbolic.lam",
        "match": "\\s*(\\\\|\\.|=|\\?|:)\\s*"
      }]
		},
		"strings": {
			"name": "string.quoted.double.lam",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.lam",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.lam"
}