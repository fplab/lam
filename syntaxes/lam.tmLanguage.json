{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "lam",
	"patterns": [
		{"include": "#keywords"},
    {"include": "#numlits"}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.alphanumeric.lam",
				"match": "\\b(let|in)\\b"
			},{
        "name": "keyword.symbolic.lam",
        "match": "\\s*(\\\\|\\.|=|\\?|:)\\s*"
      }]
		},
    "numlits": {
      "name": "constant.numeric.lam",
      "match": "\\b[0-9]\\b"
    }
	},
	"scopeName": "source.lam"
}